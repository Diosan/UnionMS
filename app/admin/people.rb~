ActiveAdmin.register Person do
  
  show do
      h3 person.first_name
      AdminUser.first.roles.each do |role|
           role.role_permissions do | role_permission |
			div do
        			puts AdminUser.first.roles.first.role_permissions.first.permission.name
      			end
           end
        end
      
  end

  form do |f|
      f.inputs "Details" do
        f.input :first_name
        f.input :last_name
      end
      f.inputs "Content" do
        f.input :description
      end
      f.actions
    end
end
