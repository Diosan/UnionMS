	puts "Usage: #{$0} file.qif"
	exit
end

input = File.new(ARGV[0])
output = [File.basename(ARGV[0]).split('.')[0..-2], 'csv'].join('.')
output = File.new(output, 'w+')
output.write("date,amount,description,transaction id, address\n")
entries = input.read.split("^\n")
entries.compact

